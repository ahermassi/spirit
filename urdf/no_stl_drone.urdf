<?xml version="1.0"?>
<robot name="ardrone">
  <link name="base_link">
    <visual>
      <geometry>
	<box size="0.43 0.07 0.04"/>
      </geometry>
    </visual>
  </link>
  <link name="front_left">
    <visual>
      <geometry>
	<cylinder length="0.02" radius="0.125"/>
      </geometry>
      <material name="white">
	<color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>
  <link name="front_right">
    <visual>
      <geometry>
	<cylinder length="0.02" radius="0.125"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <link name="aft_left">
    <visual>
      <geometry>
	<cylinder length="0.02" radius="0.125"/>
      </geometry>
      <material name="blue">
	<color rgba="0 0 0.8 1"/>
      </material>
    </visual>
  </link>
  <link name="aft_right">
    <visual>
      <geometry>
	<cylinder length="0.02" radius="0.125"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_front_left" type="fixed">
    <parent link="base_link"/>
    <child link="front_left"/>
    <origin xyz="-0.125 -0.125 0"/>
  </joint>
  <joint name="base_to_front_right" type="fixed">
    <parent link="base_link"/>
    <child link="front_right"/>
    <origin xyz="-0.125 0.125 0"/>
  </joint>
  <joint name="base_to_aft_left" type="fixed">
    <parent link="base_link"/>
    <child link="aft_left"/>
    <origin xyz="0.125 -0.125 0"/>
  </joint>
  <joint name="base_to_aft_right" type="fixed">
    <parent link="base_link"/>
    <child link="aft_right"/>
    <origin xyz="0.125 0.125 0"/>
  </joint>
</robot>

